.theme-container.custom-page-class {
  .tabs {
    display: flex;
    flex-wrap: wrap;
  }

  .tabs label {
    order: 1;
    display: block;
    padding: 1rem 2rem;
    margin-right: 0.2rem;
    cursor: pointer;
    background: #DDD;
    font-weight: bold;
    transition: background ease 0.2s;
    border-top: 1px solid black;
  }

  .tabs .tab {
    order: 99;
    flex-grow: 1;
    width: 100%;
    display: none;
    padding: 1rem;
    background: #fff;
  }

  .tabs input[type="radio"] {
    display: none;
  }

  .tabs input[type="radio"]:checked + label {
    background: #fff;
  }

  .tabs input[type="radio"]:checked + label + .tab {
    display: block;
  }

  @media (max-width: 45em) {
    .tabs .tab,
    .tabs label {
      order: initial;
    }
    .tabs label {
      width: 100%;
      margin-right: 0;
      margin-top: 0.2rem;
    }
  }

  body {
    background: #f5f5f5;
    font-family: sans-serif; 
    max-width: 100rem;
    margin: 10px;
    font-size: 100%;
  }

  #topbanner {
    margin-bottom: 40px;
    margin-top: 20px;
  }

  #footer {
    margin-top: 20px;
  }

  .contentsection {
    display: flex;
    flex-direction: row;
    flex-flow: row wrap;
    justify-content: space-between;
    padding: 0;
    margin: 10px -5px 0 -5px;
  }

  .contentbox {
    flex: 1;
    margin:5px;
    min-width: 280px;
    padding: 0 16px 16px 16px;
  }

  .contentbox h4 {
    font-size: 18px;
    font-weight: 500;
    margin-block-start: 16px;
    margin-block-end: 0;
  }

  .contentbox p {
    font-size: 14px;
    margin-block-start: 8px;
    margin-block-end: 0;
  }

   /*.contentbox a {
    font-size: 14px;
